{
  "name": "permaweb-crawler",
  "description": "A web crawler for the Permaweb.",
  "version": "0.1.24",
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx modules/index.ts",
    "build:docker": "docker build -t ghcr.io/kay-is/permaweb-crawler:0.1.24 .",
    "push:docker": "docker push ghcr.io/kay-is/permaweb-crawler:0.1.24",
    "start:docker": "docker run -d -p 3000:3000 -v ./storage:/home/myuser/storage ghcr.io/kay-is/permaweb-crawler:0.1.24",
    "dev:docker": "docker run -d -p 3000:3000 -v ./storage:/home/myuser/storage $(docker build -q .)",
    "prune:storage": "rm -rf storage/*"
  },
  "author": "Kay Plößer",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@swc/helpers": "^0.5.17",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.17.0",
    "prettier": "^3.6.2",
    "regenerator-runtime": "^0.14.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@ar.io/wayfinder-core": "^1.1.1",
    "@duckdb/node-api": "^1.3.2-alpha.25",
    "@trpc/server": "^11.4.3",
    "crawlee": "^3.14.0",
    "node-html-parser": "^7.0.1",
    "playwright": "^1.54.2",
    "superminhash": "^1.0.0",
    "valibot": "^1.1.0"
  }
}
