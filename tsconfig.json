{
  "include": ["modules/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "lib": ["es2022"],
    "types": ["node"]
  },
  "ts-node": {
    "swc": true
  }
}